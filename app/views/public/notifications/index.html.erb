<div class="layout bg-cover">
  <h3 class="text-center">通知一覧</h3>
  <% if @notifications.blank? %>
    <p class="text-center">現在通知はありません。</p>
  <% else %>
    <%= link_to "全削除",notifications_path(@notifications), method: :delete, class:"btn btn-light" %>
    <% @notifications.each do |notification| %>
        <%= render "#{notification.action_type}", notification: notification %>
    <% end %>
  <% end %>
</div>
