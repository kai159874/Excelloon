<div class="mt-3">
  <%= form_with url: searches_balloons_search_path, method: :get, local: true do |f| %>
    <%= f.radio_button :search_obj, :content, checked: "checked", value: "content", class: "cursor"%>
    <%= f.label :search_obj_content, "ワード", class: "cursor" %>
    <%= f.radio_button :search_obj, :tag, value: "tag", class: "cursor" %>
    <%= f.label :search_obj_tag, "タグ", class: "cursor" %>
    <%= f.text_field :keyword, placeholder: " キーワードを入力 ", size: "15x1", class: "form_control pb-1" %>
    <%= f.submit "検索", class: "btn btn-secondary btn-sm" %>
  <% end %>
</div>
