<% balloon.balloon_comments.each do |balloon_comment| %>
<tr>
  <td>
    <div>
      <%= balloon_comment.user.name %>
    </div>
  </td>
  <td>
    <%= balloon_comment.comment %>
  </td>
    <% if balloon_comment.user_id == current_user.id %>
      <td>
        <%= link_to 'Destroy', balloon_balloon_comment_path(balloon_comment.balloon, balloon_comment), method: :delete, remote: true, data: { confirm: 'コメントを削除しますか？' }, class: "btn btn-sm btn-danger"%>
      </td>
    <% end %>
  </tr>
<% end %>

