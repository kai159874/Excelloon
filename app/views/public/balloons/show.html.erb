<article class="d-flex justify-content-center">
  <div class="text-center">
    <div class="card" style="width:18rem;">
      <div class="card-header"><%= @balloon.content %></div>
      <%= image_tag @balloon.convert_balloon_image("400") if @balloon.balloon_image.attached? %>
    </div>
  </div>
  <div>
    <%= link_to "X", balloon_path(@balloon), method: :delete, class: "btn border", local: true %>
  </div>
</article>


