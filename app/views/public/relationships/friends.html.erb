<article class="text-center">
  <h3>友達一覧</h3>
  <% if @users.nil? %>
    <p><%= link_to "こちら", searches_search_path %>からIDを入力して友達申請をすることができます</p>
  <% else %>
    <table class="table table-hover mx-auto", style="max-width: 460px;">
      <% @users.each do |user| %>
        <tr onclick='window.location="<%= user_path(user) %>"', role="link", class="cursor">
          <td><%= image_tag user.get_profile_image, size: "50x50", style: "object-fit: cover;", class: "rounded-circle mx-auto" %></td>
          <td><%= user.name %></td>
          <td><%= link_to '解除', user_relationships_path(user.id), method: :delete, data: { confirm: "友達リストから解除しますか？" }, class: "btn btn-danger" %></td>
        </tr>
      <% end %>
    </table>
  <% end %>
</article>

