<article class="layout text-center">
  <h3>友達一覧</h3>
  <table class="table table-hover">
    <% @users.each do |user| %>
      <tr onclick='window.location="<%= user_path(user) %>"', role="link", class="cursor">
        <td><%= image_tag user.get_profile_image, size: "50x50", class: "rounded-circle mx-auto" %></td>
        <td><%= user.name %></td>
        <td><%= link_to '解除', user_relationships_path(user.id), method: :delete, data: { confirm: "友達リストから解除しますか？" }, class: "btn btn-danger" %></td>
      </tr>
    <% end %>
  </table>
</article>

