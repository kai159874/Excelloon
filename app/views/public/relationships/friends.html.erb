<article class="text-center">
  <h3>友達一覧</h3>
  <% if @users.nil? %>
    <p><%= link_to "こちら", searches_search_path %>からIDを入力して友達申請をすることができます</p>
  <% else %>
    <table class="table mx-auto", style="max-width: 460px;">
      <% @users.each do |user| %>
        <tr>
          <td><%= image_tag user.get_profile_image, size: "50x50", class: "profile-image mx-auto" %></td>
          <td><%= link_to user.name, user_path(user) %></td>
          <td><%= link_to 'DM', chat_path(user.id), class: "btn btn-info" %></td>
          <td><%= link_to '解除', user_relationships_path(user.id), method: :delete, data: { confirm: "友達リストから解除しますか？" }, class: "btn btn-danger" %></td>
        </tr>
      <% end %>
    </table>
  <% end %>
</article>

