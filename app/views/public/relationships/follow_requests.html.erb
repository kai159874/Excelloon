<div>
  <p>受信した友達申請</p>
  <% @users.each do |user| %>
    <% unless current_user.id == user.id %>
      <% if user.follow_request?(current_user, user) %>
        <li>
          <%= user.name %>
          <%= link_to '友達になる', user_relationships_path(user.id), method: :post, class: "" %>
          <%= link_to '申請を取り消す', user_relationships_path(user.id), method: :delete, data: { confirm: "友達申請を取り消しますか？" }, class: "" %>
        </li>
      <% end %>
    <% end %>
  <% end %>
</div>
<div>
  <p>友達申請中</p>
  <% @users.each do |user| %>
    <% if current_user.follow_request?(user, current_user) %>
      <li>
        <%= user.name %>
      </li>
    <% end %>
  <% end %>
</div>