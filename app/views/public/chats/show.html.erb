<article class="pb-5 text-center">
  <div>
    <h2><%= @user.name %> さんとのチャット</h2>
    <hr class="heading-line">
  </div>

  <div class="chat-container bg-cover">
    <div id="message" class="message-box" >
      <div id="message_scroll">
        <%= render "public/chats/messages", chats: @chats %>
      </div>
    </div>

    <div class="mt-3">
      <%= form_with model: @chat, local: false do |f| %>
        <%= f.text_field :message, placeholder: "メッセージを入力してください", class: "form-control" %>
        <%= f.hidden_field :room_id, value: @room.id %>
        <%= f.submit "送信", class: "btn btn-success mt-2" %>
      <% end %>
    </div>
  </div>
</article>