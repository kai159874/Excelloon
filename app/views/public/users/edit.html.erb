<article class='d-flex flex-column text-center'>
  <div class='mx-auto'>
    <h2>ユーザー情報編集</h2>
    <%= form_with model: @user, url: mypage_path, method: :patch, local:true do |f| %>
      <table class="table">
        <tr>
          <th><%= f.label :name %></th>
          <td><%= f.text_field :name %></td>
        </tr>
        <tr>
          <th><%= f.label :image %></th>
          <td><%= f.file_field :profile_image, accept: 'image/*' %></td>
        </tr>
        <tr>
          <th>
            <%= link_to "戻る", mypage_path, class: 'btn border' %>
          </th>
          <th>
            <%= f.submit "更新", class: 'btn submit-btn border' %>
          </th>
        </tr>
      </table>
    <% end %>
  </div>
  <div>
    <%= link_to "退会", unsubscribe_path, class: "btn btn-danger" %>
  </div>
</article>
