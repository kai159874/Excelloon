<article class='mb-5 text-center layout'>

  <%= render 'layouts/errors', obj: @user %>

  <h2>ユーザー情報編集</h2>
  <%= form_with model: @user, url: mypage_path, method: :patch, local:true do |f| %>
    <div class='form-group mx-auto'>
      <table class="table table-bordered">
        <tr>
          <th><%= f.label :name %></th>
          <td><%= f.text_field :name, class: "form-control", size: "10" %></td>
        </tr>
        <tr>
          <th><%= f.label :profile_image %></th>
          <td><%= f.file_field :profile_image, accept: 'image/*' %></td>
        </tr>
        <tr>
          <th>
            <%= link_to "戻る", mypage_path, class: 'btn btn-secondary border' %>
          </th>
          <th>
            <%= f.submit "更新", class: 'btn btn-info border' %>
          </th>
        </tr>
      </table>
    </div>
  <% end %>
  <div class="">
    <%= link_to "退会", unsubscribe_path, class: "btn btn-sm btn-danger" %>
  </div>
</article>
