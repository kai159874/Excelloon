<article class="container text-center">
  <% if @type == "all" %>
    <h2>投稿一覧</h2>
    <%= link_to "通報一覧へ", admin_top_path %>
  <% else %>
    <h2>通報投稿一覧</h2>
    <%= link_to "全投稿一覧へ", admin_top_path(type: "all") %>
  <% end %>
  <div class="row">
    <div class="col mx-auto">
      <table class="table table-hover text-center">
        <thead>
          <tr class="table-secondary">
            <th>会員名</th>
            <th>本文</th>
            <th>通報数</th>
          </tr>
        </thead>
        <tbody>
          <% @balloons.each do |balloon| %>
            <tr>
              <td><%= link_to find_user(balloon).name, admin_user_path(find_user(balloon)) %></td>
              <td><%= link_to balloon.content.truncate(20), admin_balloon_path(balloon) %></td>
              <td><%= balloon.reports.count %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</article>

