<footer class="fixed-bottom">
  <div class="d-flex justify-content-around text-center">
    <% if admin_signed_in? %>
      <div class="bg-secondary col-4">
        <%= link_to "通報一覧", admin_top_path, class: "admin-footer-text" %>
      </div>
      <div class="bg-secondary col-4">
        <%= link_to "会員一覧", admin_users_path, class: "admin-footer-text" %>
      </div>
      <div class="bg-secondary col-4">
        <%= link_to 'ステッカー一覧', admin_stickers_path, class: "admin-footer-text" %>
      </div>
      <% elsif user_signed_in? %>
      <div class="footer-bg">
        <%= link_to searches_search_path do %>
          <div class="footer-icon ">
            <span class="fa-stack">
              <i class="fa-solid fa-user-group"></i>
            </span>
          </div>
          <div class="footer-text">
            友達を探す
          </div>
        <% end %>
      </div>
      <div class="footer-bg">
        <%= link_to new_balloon_path do %>
          <div class="footer-icon ">
            <span class="fa-stack">
              <i class="fa-solid fa-circle-plus"></i>
            </span>
          </div>
          <div class="footer-text">
            新規作成
          </div>
        <% end %>
      </div>
      <div class="footer-bg">
        <%= link_to notifications_path do %>
          <div class="footer-icon ">
            <% if current_user.notifications.where(read: false).exists? %>
              <span class="fa-stack">
                <i class="fa-sharp fa-solid fa-bell"></i>
                <i class="fas fa-circle n-circle fa-stack-1x"></i>
              </span>
            <% else %>
            <span class="fa-stack">
              <i class="fa-sharp fa-solid fa-bell"></i>
            </span>
            <% end %>
          </div>
          <div class="footer-text">
            通知一覧
          </div>
        <% end %>
      </div>
      <div class="footer-bg">
        <%= link_to mypage_path do %>
        <div>
          <span>
            <%= image_tag current_user.get_profile_image, size: "32x32", class: "profile-image mx-auto my-2" %>
          </span>
        </div>
        <div class="footer-text align-items-end">
          マイページ
        </div>
        <% end %>
      </div>
    <% else %>
      <div class="footer-bg">
        <%= link_to searches_search_path do %>
          <div class="footer-icon ">
            <span class="fa-stack">
              <i class="fa-solid fa-user-group"></i>
            </span>
          </div>
          <div class="footer-text">
            友達を探す
          </div>
        <% end %>
      </div>
      <div class="footer-bg">
        <%= link_to new_balloon_path do %>
          <div class="footer-icon ">
            <span class="fa-stack">
              <i class="fa-solid fa-circle-plus"></i>
            </span>
          </div>
          <div class="footer-text">
            新規作成
          </div>
        <% end %>
      </div>
      <div class="footer-bg">
        <%= link_to new_user_registration_path do %>
          <div class="footer-icon ">
            <span class="fa-stack">
              <i class="fa-solid fa-right-to-bracket"></i>
            </span>
          </div>
          <div class="footer-text">
            会員登録
          </div>
        <% end %>
      </div>
    <% end %>
  </div>
</footer>