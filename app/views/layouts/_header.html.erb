<header class="container-fulid header-bg">
  <div class="row">
    <div class="col-md-4 text-center">
      <%= link_to "about", about_path %>
    </div>
    <div class="col-md-4 text-center">
      <%= link_to "top-image", root_path %>
    </div>
    <div class="col-md-4 text-center">
      <% if admin_signed_in? %>
          <%= link_to 'ログアウト', destroy_admin_session_path, method: :delete, class: "col-3 col-xl-2 btn header-btn mb-2" %>
      <% elsif user_signed_in? %>
          <%= link_to 'ログアウト', destroy_user_session_path, method: :delete, class: "btn header-btn" %>
      <% else %>
          <%= link_to '新規登録', new_user_registration_path, class: "btn header-btn" %>
          <%= link_to 'ログイン', new_user_session_path, class: "btn header-btn" %>
      <% end %>
    </div>
  </div>
</header>