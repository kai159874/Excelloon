<header class="header-bg">
  <div class="d-flex align-items-center justify-content-between">
    <div class="col-md-4 text-center">
      <%= link_to "about", about_path %>
    </div>
    <h1 class="col-md-4 text-center">
      <%= link_to root_path do %>
        <%= image_tag "Excelloon.png", size: "50x50" %>
      <% end %>
    </h1>
    <div class="col-md-4 text-center">
      <% if admin_signed_in? %>
        <%= link_to 'ログアウト', destroy_admin_session_path, method: :delete, class: "col-3 col-xl-2 btn header-btn mb-2" %>
      <% elsif user_signed_in? %>
        <%= link_to 'ログアウト', destroy_user_session_path, method: :delete, class: "" %>
      <% else %>
        <%= link_to 'ログイン', new_user_session_path, class: "" %>
      <% end %>
    </div>
  </div>
</header>